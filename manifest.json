{
    "manifest_version": 3,
    "name": "LinkedIn Profile Opener",
    "version": "1.0",
    "description": "Open LinkedIn profiles from a list and post data to an API.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/chrome.png",
        "48": "images/chrome.png",
        "128": "images/chrome.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "tabs",
      "activeTab",
      "http://localhost:3000/*",
      "scripting",
      "https://www.linkedin.com/*"
    ]
  }
  